#!/bin/bash

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
PROJECTPATH="$( cd $SCRIPTPATH && cd ..; pwd -P )"

cd $PROJECTPATH;

source "$PROJECTPATH/tools/check_for_update.sh"

files=(
    "docker-compose.yml"
    "compose/apache.yml"
    "compose/mariadb.yml"
    "compose/mssql.yml"
    "compose/mysql.yml"
    "compose/nginx.yml"
    "compose/pgsql.yml"
    "compose/php.yml"
    "compose/selenium.yml"
)

if [ "$1" ==  "build" ]; then
    files+=(
        "compose/build.yml"
    )
elif [ -f "$PROJECTPATH/.use-mutagen" ]; then
    files+=(
        "compose/sync.yml"
    )
fi

for file in custom/*.yml; do
    [[ -e "$file" ]] && files+=($file)
done;
for file in custom/*.yaml; do
    [[ -e "$file" ]] && files+=($file)
done;

command="docker-compose "
for file in "${files[@]}"; do
    command+=" -f ${file}"
done
command+=" ${@}"

eval $command
